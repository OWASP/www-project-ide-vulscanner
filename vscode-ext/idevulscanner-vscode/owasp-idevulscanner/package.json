{
  "name": "owasp-vulscanner",
  "displayName": "OWASP VulScanner",
  "description": "VS Code extension for detecting vulnerabilities using Spectral.",
  "version": "0.1.0",
  "publisher": "your-publisher-name",
  "engines": {
    "vscode": "^1.70.0"
  },
  "categories": ["Linters", "Security"],
  "activationEvents": [
    "onCommand:owasp-vulscanner.runSpectralLint",
    "workspaceContains:**/*.yaml",
    "workspaceContains:**/*.json"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "owasp-vulscanner.runSpectralLint",
        "title": "Run Spectral Linting",
        "category": "OWASP Vulscanner"
      }
    ],
    "configuration": {
      "title": "OWASP VulScanner Configuration",
      "properties": {
        "owasp-vulscanner.enableSpectral": {
          "type": "boolean",
          "default": true,
          "description": "Enable Spectral linting on file open and save."
        },
        "owasp-vulscanner.spectralRuleset": {
          "type": "string",
          "default": "./spectral.yaml",
          "description": "Path to the Spectral ruleset file."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -w -p .",
    "lint": "eslint . --ext .ts",
    "build": "esbuild src/extension.ts --bundle --outfile=dist/extension.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.70.0",
    "typescript": "^4.8.4",
    "eslint": "^8.0.0",
    "esbuild": "^0.14.0"
  },
  "dependencies": {
    "@stoplight/spectral": "^6.0.0",
    "@stoplight/yaml": "^2.0.0",
    "vscode-uri": "^3.0.0",
    "fs": "0.0.1-security"
  }
}
